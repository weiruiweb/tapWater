.userInfo {
  align-items: left;
  background: #63bbff;
  width:100%;
  height: 300rpx;
  line-height: 320rpx;
}

.userinfo-avatar {
  overflow:hidden;
  display: block;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  width:152rpx;
  height: 152rpx;
  margin:85rpx 43rpx 60rpx 60rpx;
  float:left;
}

.userName{line-height:320rpx;font-size:32rpx;color:#fff;}

.basicform{padding:0px 50rpx;position:relative;clear:both;}
.contactWord{float:left;font-size:32rpx;color:#333;}
.contactInput{width:335rpx;float:left;font-size:32rpx;line-height:106rpx;}
.contactInput input{line-height:106rpx;color:#000;position:absolute;top:28rpx;padding-left:30rpx;font-size:26rpx;}
.contact{height:106rpx;line-height:106rpx;border-bottom:solid 1px #ccc;position:relative;}
.basicform image{width:35rpx;height:36rpx;float:left;margin:35rpx 35rpx 35rpx 0rpx;}
.edit{position:absolute;top:0rpx;right:30rpx;}


